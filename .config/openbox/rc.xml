        <height>80%</height>
        <width>70%</width>
      </action>
      <action name="Execute">
        <command>mpv --keep-open=no --no-video --volume=75 ~/.sounds/move.wav</command>
      </action>
    </keybind>
    <!-- WINDOW RESIZING -->
    <keybind key="W-A-Left">
      <action name="UnmaximizeFull"/>
      <action name="Decorate"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <height>100%</height>
        <width>50%</width>
